{
  "name": "personal-website",
  "description": "Personal website of Henrik Fricke",
  "license": "MIT",
  "sideEffects": false,
  "author": {
    "email": "henrikfricke@web.de",
    "name": "Henrik Fricke",
    "url": "https://github.com/henrikfricke"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "remix build && run-p dev:*",
    "dev:remix": "remix watch",
    "dev:css": "npm run generate:css -- --watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "generate:css": "npx tailwindcss -i ./styles/app.css -o ./app/styles/app.css",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^1.4.0",
    "@remix-run/cloudflare-pages": "^1.4.0",
    "@remix-run/react": "^1.4.0",
    "cross-env": "^7.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.4.0",
    "@remix-run/dev": "^1.4.0",
    "@remix-run/eslint-config": "^1.4.0",
    "@rvxlab/tailwind-plugin-ios-full-height": "^1.1.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.1.0",
    "eslint": "^8.11.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.5.5",
    "wrangler": "beta"
  },
  "engines": {
    "node": ">=14"
  }
}
