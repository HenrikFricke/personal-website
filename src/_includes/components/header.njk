<header class="p-6 md:p-16 flex items-center justify-center bg-wave dark:bg-wave-dark bg-center bg-repeat-x">
  <section class="z-10 mr-2 mb-2 lg:mr-4 lg:mb-4 relative w-full max-w-4xl before:absolute before:bg-sedondary before:inset-0
      before:translate-x-1 before:translate-y-1 lg:before:translate-x-2 lg:before:translate-y-2 after:absolute
      after:bg-tertiary after:inset-0 after:translate-x-2 after:translate-y-2 lg:after:translate-x-4 lg:after:translate-y-4
      after:-z-10 before:rounded-2xl after:rounded-2xl">
    <section class="md:flex relative bg-primary dark:bg-neutral-900 border-black dark:border-zinc-300 border-4 px-4 py-5 lg:px-9
        lg:py-8 md:items-center rounded-xl flex-row-reverse">
      <picture class="relative block w-full md:max-w-[400px] md:max-h-max overflow-hidden rounded-xl filter brightness-[1.1]
          contrast-[0.7] saturate-[1.1] border-black dark:border-zinc-300 border-2">
        <source srcSet="/img/profile.avif" type="image/avif"/>
        <source srcSet="/img/profile.webp" type="image/webp"/>
        <img
          class="w-full md:max-h-max"
          src="/img/profile.jpg"
          alt="just a pic showing me"
          role="presentation"
          width="400"
          height="400"/>
      </picture>
      <section class="md:mr-16 mt-5 md:mt-0 w-full">
        <h1 class="dark:text-zinc-300 font-francois-one text-5xl lg:text-6xl mb-3 md:mb-4">
          <small class="text-2xl lg:text-3xl block">Hi, I’m</small>
          {{ metadata.firstName }}
        </h1>
        <p class="text-l lg:text-xl max-w-xs mb-6">
          Software Developer at WakeSys — with a strong focus on web and serverless technologies.
        </p>
        <p class="text-m lg:text-l max-w-xs mb-6">
          <a
            class="font-semibold bg-clip-text bg-gradient-to-r from-tertiary to-sedondary text-transparent"
            href="mailto:hi@henrikfricke.dev">
            hi@henrikfricke.dev
          </a>
        </p>
        <section class="flex items-center">
          {%- for entry in metadata.socialLinks %}
            <a class="mr-4" href="{{ entry.url | url }}" title="{{ entry.title }}" rel="noopener">
              <i aria-hidden="true">{% include 'icons/' + entry.id + '.njk' %}</i>
              <span class="sr-only">{{ entry.title }}</span>
            </a>
          {%- endfor %}
        </section>
      </section>
    </section>
  </section>
</header>
